@model ContactsApp.Models.LoginModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="row">
            <div class="col-md-12 text-center">
                <h3>Sign In</h3>
            </div>
        </div><br />
        <div class="row">
            <div class="col-md-12 text-center">
                Don't have an account? <a href="/SignUp/Index">SignUp</a>
            </div>
        </div><br />
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { id = "signInForm" }))
        {
            <div class="row">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Email)
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div><br />
            <div class="row">
                <div class="col-md-12">
                    @Html.LabelFor(m => m.Password)
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 form-group">
                    @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @type="password" })
                </div>
            </div><br />
            <div class="row">
                <div class="col-md-12">
                    <a href="#">Forogt your Password?</a>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-10">
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
            </div>
            if (ViewBag.Error == "")
            {

            }
            else
            {
                <br />
                <div class="row">
                    <div class="col-md-10">
                        <span style="color:red;font-size:15pt;">@ViewBag.Error</span>
                    </div>
                </div>

            }
        }

    </div>
    <div class="col-md-4"></div>
</div>
